#footer
  background: color-footer-background
  color: #333
  opacity: 0
  transition: opacity 0.2s ease-in
  .outer
    border-top: 1px solid #cdcdcd
    padding: 22px 0px
  &.open
    opacity: 1
  a
    color: color-link
    text-decoration: none
    &:hover
      text-decoration: underline

#footer-info
  line-height: line-height - 8
  font-size: 12px
  text-align: right
  padding-right: 1px
  .logo
    margin-bottom: 20px