if sidebar is bottom
  @import "sidebar-bottom"
else
  @import "sidebar-aside"

.widget
  clearfix()
  @extend $base-style
  line-height: 20px
  word-wrap: normal
  font-size: 0.85em
  ul, ul
    list-style: none
    line-height: 25px
  ol, ul
    list-style: none
  ul, ol
    list-style: none
    margin: 0
    ul, ol
      margin: 0px
    line-height: 25px
    ul
      list-style: none
    ol
      list-style: none

.category-list-count
.tag-list-count
.archive-list-count
  padding-left: 5px
  color: #000000
  font-size: 0.85em
  &:before
    content: "("
  &:after
    content: ")"

.tagcloud
  a
    margin-left: 5px
    word-wrap: normal
    float: right